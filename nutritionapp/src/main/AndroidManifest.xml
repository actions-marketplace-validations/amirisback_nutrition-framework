<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.frogobox.nutritionapp"
    android:targetSandboxVersion="1"
    tools:targetApi="o">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".NutriApplication"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KickStart"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity
            android:name=".mvvm.nutrition.article.ArticleCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.nutrition.vitamin.VitaminSolveActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.nutrition.vitamin.VitaminProblemActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.nutrition.meal.NutritionMealActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.nutrition.general.BeratBadanIdealActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.nutrition.general.IndexMasaTubuhActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.nutrition.general.KebutuhanEnergiActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.nutrition.general.CalculatorNutritionActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.nutrition.article.ArticleActivity"
            android:exported="false" />
        <activity
            android:name=".mvvm.uixml.UiXmlActivity"
            android:exported="true" />
        <activity android:name=".mvvm.uixml.UiXmlRvActivity" />
        <activity android:name=".mvvm.uixml.UiXmlRvDetailActivity" />
        <activity
            android:name=".mvvm.uicompose.MainComposeActivity"
            android:exported="true"
            android:theme="@style/Theme.KickStart.NoActionBar" />
        <activity android:name=".mvvm.nutrition.article.ArticleDetailActivity" />
        <activity android:name=".mvvm.about.AboutUsActivity" />
        <activity
            android:name=".mvvm.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_publisher_id" />
    </application>

</manifest>